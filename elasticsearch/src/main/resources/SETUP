            "char_filter": [
              "html_strip"
            ],
            "tokenizer": "whitespace"
          }
        }
      },
      "number_of_shards": "1",
      "number_of_replicas": "0",
      "query": {
        "default_field": "_any"
      }
    }
  },
  "mappings": {
    "_default_": {
      "dynamic_templates": [
        {
          "locationgeo": {
            "mapping": {
              "type": "geo_point"
